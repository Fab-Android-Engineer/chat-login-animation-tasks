<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="usernameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/username_text_size</item>
        <item name="android:textColor">@color/chat_text</item>

    </style>

    <style name="chatStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/chat_text_size</item>
        <item name="android:textColor">@color/chat_text</item>
    </style>

    <!-- input field styling -->
    <style name="inputFieldStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/color_hint_field</item>
        <item name="android:textSize">@dimen/input_field_text_size</item>
        <item name="android:textColor">@color/color_input_field</item>
    </style>
    <style name="alertDialogStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/status_size</item>
        <item name="android:textColor">@color/button_blue</item>
    </style>

    <style name="apiResponseStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
